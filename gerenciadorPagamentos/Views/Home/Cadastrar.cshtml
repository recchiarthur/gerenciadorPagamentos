@{
    ViewBag.Titulo = "Cadastrar pagamento";
}

@model Pagamento

    <div class="container">
        <div class="text-center">
          <h1>Cadastrar Pagamento</h1>
    </div>
    <form method="post" action="/Home/Salvar">
        <div class="row">
          <div class="col">
            <label asp-for="descricao" class="form-label">Descrição:</label>
            <input asp-for="descricao" class="form-control"/> 
          </div>
        </div>
        <div class="row">
            <div class="col">
                <label asp-for="codigo_barras" class="form-label">Código de barras:</label>
                <input asp-for="codigo_barras" class="form-control"/>
            </div>
        </div>
        <div class="row">
          <div class="col">
            <label asp-for="data_vencimento" class="form-label" style="margin-top: 10px">Data de vencimento:</label>
            <input asp-for="data_vencimento" placeholder="DD/MM/AAAA" class="form-control" type="date"/>
          </div>
          <div class="col">
            <label asp-for="data_pagamento" class="form-label" style="margin-top: 10px">Data de pagamento:</label>
            <input asp-for="data_pagamento" placeholder="DD/MM/AAAA" class="form-control" type="date"/>
          </div>
          <div class="col">
            <label asp-for="valor" class="form-label" style="margin-top: 10px">Valor:</label>
            <input asp-for="valor"  class="form-control"/>
          </div>
        </div>
        <div class="text-center">
            <button class="btn btn-success mb-3 mt-3 w-25">Salvar</button>
            <a href="/Home/" class="btn btn-danger w-25">Voltar</a>
        </div>
    </form>
        <div class="text-center">
        </div>
    </div>
